<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yu.useviewpager.MainActivity0">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="8dp"
      android:background="#ccc"
      android:orientation="horizontal">
   <TextView
       android:id="@+id/id_tv_dialer"
       android:layout_width="0dp"
       android:gravity="center"
       android:layout_weight="1"
       android:textSize="@dimen/size_title"
       android:layout_height="match_parent"
       android:textColor="#67f"
       android:onClick="gotoDialer"
       android:text="@string/tv_dialer_title"/>

    <TextView
        android:id="@+id/id_tv_contacts"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center"
        android:onClick="gotoContacts"
        android:textSize="@dimen/size_title"
        android:text="@string/tv_contacts_title"/>
    <TextView
        android:id="@+id/id_tv_message"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:onClick="gotoMsg"
        android:textSize="@dimen/size_title"
        android:layout_height="match_parent"
        android:text="@string/tv_message_title"/>

  </LinearLayout>

  <android.support.v4.view.ViewPager
      android:id="@+id/id_view_pager"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_alignParentTop="true"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true" />
</LinearLayout>
